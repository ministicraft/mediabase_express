extends layout

block content
    main
        .row
            ul.pagination.col.m6.l4.s12
                li.disabled
                    a(href="#!")
                        i.material-icons chevron_left
                li.active
                    a(href="#!") 1
                li.waves-effect
                    a(href="#!") 2
                li.waves-effect
                    a(href="#!") 3
                li.waves-effect
                    a(href="#!") 4
                li.waves-effect
                    a(href="#!") 5
                li.waves-effect
                    a(href="#!")
                        i.material-icons chevron_right
            .input-field.col.offset-l5.l3.m6.s12
                i.material-icons.prefix search
                textarea#search.materialize-textarea
                label(for="search") Search
        .collection
            - var items = ["Titre 1", "Titre 2", "Titre 3"]
            each item in items
                a.collection-item.row(href="#!")
                    .artwork.col.s2
                        img(src="/images/album.jpg")
                    .title.col.s10
                        h4= item